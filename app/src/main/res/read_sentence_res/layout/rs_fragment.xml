<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.eywa.projectlectito.features.readSentence.mvi.ReadSentenceMviViewModel"
            />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_read_sentence__top_level_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?general_background"
        >

        <com.eywa.projectlectito.features.readSentence.ui.RsWordDefinitionView
            android:id="@+id/layout_read_sentence__word_definition"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/layout_read_sentence__text_contents"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_default="wrap"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread_inside"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_read_sentence__text_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@id/placeholder_read_sentence__select_mode"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_read_sentence__word_definition"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_read_sentence__text_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="?db_text_info_banner_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >

                <!-- Width is temporary as it will be overwritten programmatically -->
                <View
                    android:id="@+id/overlay_read_sentence__snippet_progress_indicator"
                    android:layout_width="100dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="?db_text_info_banner_background_aux"
                    />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    >

                    <TextView
                        android:id="@+id/text_read_sentence__current_text_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@{viewModel.viewState.sentenceState.asValid().getTextName}"
                        android:textColor="?info_banner_text"
                        android:textSize="@dimen/small_text"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/text_read_sentence__chapter_page"
                        app:layout_constraintHorizontal_chainStyle="spread_inside"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="RtlSymmetry"
                        tools:text="傭兵団の料理番"
                        />

                    <TextView
                        android:id="@+id/text_read_sentence__chapter_page"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.viewState.sentenceState.asValid().chapterPage}"
                        android:textColor="?info_banner_text"
                        android:textSize="@dimen/small_text"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/text_read_sentence__current_text_title"
                        tools:text="第２章３０ページ"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.eywa.projectlectito.features.readSentence.ui.RsSelectedWordInfoManualView
                android:id="@+id/layout_read_sentence__selected_word_info_manual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toTopOf="@id/text_read_sentence__context"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_read_sentence__text_info"
                tools:visibility="gone"
                />

            <com.eywa.projectlectito.features.readSentence.ui.RsSelectedWordInfoParsedView
                android:id="@+id/layout_read_sentence__selected_word_info_parsed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toTopOf="@id/text_read_sentence__context"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_read_sentence__text_info"
                />

            <TextView
                android:id="@+id/text_read_sentence__context"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp"
                android:ellipsize="start"
                android:maxLines="7"
                android:singleLine="false"
                android:text="@{viewModel.viewState.sentenceState.asValid().previousSentence}"
                android:textColor="?general_text"
                android:textSize="@dimen/small_text"
                app:layout_constraintBottom_toTopOf="@id/text_read_sentence__sentence"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:visibleOrGone="@{viewModel.viewState.sentenceState.asValid().previousSentence}"
                tools:text="しかも、八人全てが美男美女という、僕のようなフノメンには居い地の悪い空間です。"
                />

            <com.eywa.projectlectito.features.readSentence.ui.SelectableTextView
                android:id="@+id/text_read_sentence__sentence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="15dp"
                android:textColor="?general_text"
                android:textIsSelectable="@{viewModel.viewState.sentenceSelectable}"
                android:textSize="@dimen/large_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:spannableText="@{viewModel.currentSentence}"
                app:visibleOrGone="@{viewModel.currentSentence}"
                tools:text="つまり、現代の日本ではヽ普通は体験てきなレ現場に出くわしてしるわけてす。"
                />

            <ImageView
                android:id="@+id/image_read_sentence__parse_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/read_sentence__parse_success"
                android:src="@drawable/ic_check"
                app:layout_constraintBottom_toBottomOf="@+id/text_read_sentence__sentence"
                app:layout_constraintEnd_toEndOf="@+id/text_read_sentence__sentence"
                app:tint="?success_green"
                app:visibleOrGone="@{viewModel.viewState.sentenceState.asValid().parseComplete}"
                />

            <ImageView
                android:id="@+id/image_read_sentence__parse_failed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/read_sentence__parse_failed"
                android:src="@drawable/ic_warning_triangle_filled"
                app:layout_constraintBottom_toBottomOf="@+id/text_read_sentence__sentence"
                app:layout_constraintEnd_toEndOf="@+id/text_read_sentence__sentence"
                app:tint="?warning_orange"
                app:visibleOrGone="@{viewModel.viewState.sentenceState.asValid().parseFailed}"
                tools:visibility="gone"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <View
            android:id="@+id/placeholder_read_sentence__select_mode"
            style="@style/FloatingActionButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="25dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button_read_sentence__full_text"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="SpeakableTextPresentCheck"
            tools:visibility="visible"
            />

        <ImageButton
            android:id="@+id/button_read_sentence__full_text"
            style="@style/FloatingActionButton"
            android:layout_margin="5dp"
            android:clickable="true"
            android:contentDescription="@string/read_sentence__full_text"
            android:focusable="true"
            android:src="@drawable/ic_baseline_article"
            app:layout_constraintBottom_toBottomOf="@id/placeholder_read_sentence__select_mode"
            app:layout_constraintEnd_toStartOf="@id/button_read_sentence__edit_sentence"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/placeholder_read_sentence__select_mode"
            app:layout_constraintTop_toTopOf="@id/placeholder_read_sentence__select_mode"
            />

        <ImageButton
            android:id="@+id/button_read_sentence__edit_sentence"
            style="@style/FloatingActionButton"
            android:layout_margin="5dp"
            android:clickable="true"
            android:contentDescription="@string/read_sentence__edit_sentence"
            android:enabled="@{viewModel.currentSentence}"
            android:focusable="true"
            android:src="@drawable/ic_edit"
            app:layout_constraintBottom_toBottomOf="@id/placeholder_read_sentence__select_mode"
            app:layout_constraintEnd_toStartOf="@id/button_read_sentence__previous_sentence"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/button_read_sentence__full_text"
            app:layout_constraintTop_toTopOf="@id/placeholder_read_sentence__select_mode"
            />

        <ImageButton
            android:id="@+id/button_read_sentence__previous_sentence"
            style="@style/FloatingActionButton"
            android:layout_margin="5dp"
            android:clickable="true"
            android:contentDescription="@string/read_sentence__previous_sentence"
            android:enabled="@{viewModel.viewState.sentenceState.asValid().previousSentence}"
            android:focusable="true"
            android:src="@drawable/ic_baseline_navigate_before"
            app:layout_constraintBottom_toBottomOf="@id/placeholder_read_sentence__select_mode"
            app:layout_constraintEnd_toStartOf="@id/button_read_sentence__next_sentence"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/button_read_sentence__edit_sentence"
            app:layout_constraintTop_toTopOf="@id/placeholder_read_sentence__select_mode"
            />

        <ImageButton
            android:id="@+id/button_read_sentence__next_sentence"
            style="@style/FloatingActionButton"
            android:layout_margin="5dp"
            android:clickable="true"
            android:contentDescription="@string/read_sentence__next_sentence"
            android:enabled="@{viewModel.viewState.sentenceState.asValid().nextSentenceStart}"
            android:focusable="true"
            android:src="@drawable/ic_baseline_navigate_next"
            app:layout_constraintBottom_toBottomOf="@id/placeholder_read_sentence__select_mode"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/button_read_sentence__previous_sentence"
            app:layout_constraintTop_toTopOf="@id/placeholder_read_sentence__select_mode"
            />

        <View
            android:id="@+id/overlay_read_sentence__select_mode"
            style="@style/TranslucentOverlayAlpha"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="?general_background"
            android:elevation="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visibleOrGone="@{viewModel.viewState.wordSelectionState.changeWordSelectionModeMenuOpen}"
            tools:visibility="gone"
            />

        <com.eywa.projectlectito.features.readSentence.ui.ReadSentenceSelectModeView
            android:id="@+id/button_read_sentence__select_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:focusableInTouchMode="false"
            app:layout_constraintBottom_toBottomOf="@id/placeholder_read_sentence__select_mode"
            app:layout_constraintStart_toStartOf="@id/placeholder_read_sentence__select_mode"
            tools:visibility="gone"
            />

        <com.eywa.projectlectito.features.readSentence.ui.HighlightOverlayView
            android:id="@+id/overlay_read_sentence__sentence"
            style="@style/TranslucentOverlayAlpha"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:overlay_color="?general_background"
            app:view_to_frame_id="@id/text_read_sentence__sentence"
            app:visibleOrGone="@{viewModel.viewState.sentenceState.asValid().chooseSnippetToEditMenuOpen}"
            tools:visibility="gone"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>