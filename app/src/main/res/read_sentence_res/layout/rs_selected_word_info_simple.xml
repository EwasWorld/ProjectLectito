<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.eywa.projectlectito.readSentence.ReadSentenceViewModel"
            />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_rs_selected_word_info_simple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/rs_selected_word_background"
        android:paddingStart="20dp"
        android:paddingEnd="15dp"
        android:visibility="@{viewModel.selectedWordSimpleViewState.showView}"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible"
        >

        <TextView
            android:id="@+id/text_read_sentence__selected_simple_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_text"
            android:visibility="@{viewModel.selectedWordSimpleViewState.selectVisibility}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="うまい"
            tools:visibility="gone"
            />

        <EditText
            android:id="@+id/input_text_read_sentence__selected_simple_word"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:hint="@string/view_texts__type_word_hint"
            android:importantForAutofill="no"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="@dimen/small_text"
            android:visibility="@{viewModel.selectedWordSimpleViewState.typeVisibility}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button_read_sentence__submit_word"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="うまい"
            />

        <ImageButton
            android:id="@+id/button_read_sentence__submit_word"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@null"
            android:contentDescription="@string/view_texts__submit_description"
            android:src="@drawable/ic_narrow_arrow_right"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/grey_1"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>