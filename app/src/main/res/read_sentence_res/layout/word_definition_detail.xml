<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingVertical="5dp"
    >

    <TextView
        android:id="@+id/text_definition_detail__parts_of_speech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Na-adjective"
        android:textSize="@dimen/small_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/text_definition_detail__index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_definition_detail__parts_of_speech"
        android:textSize="@dimen/medium_text"
        />

    <TextView
        android:id="@+id/text_definition_detail__index_separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:paddingEnd="3dp"
        app:layout_constraintStart_toEndOf="@+id/text_definition_detail__index"
        app:layout_constraintTop_toTopOf="@id/text_definition_detail__index"
        tools:ignore="HardcodedText,RtlSymmetry"
        android:textSize="@dimen/medium_text"
        />
    <TextView
        android:id="@+id/text_definition_detail__definition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="definition of term"
        app:layout_constraintStart_toEndOf="@+id/text_definition_detail__index_separator"
        app:layout_constraintTop_toTopOf="@id/text_definition_detail__index"
        tools:ignore="HardcodedText"
        android:textSize="@dimen/medium_text"
        />

    <TextView
        android:id="@+id/text_definition_detail__tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small_text"
        app:layout_constraintStart_toEndOf="@+id/text_definition_detail__index_separator"
        app:layout_constraintTop_toBottomOf="@id/text_definition_detail__definition"
        tools:text="Usually written using kana alone"
        />
</androidx.constraintlayout.widget.ConstraintLayout>