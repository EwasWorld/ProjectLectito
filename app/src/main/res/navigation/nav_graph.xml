<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/viewTextsFragment"
    >

    <fragment
        android:id="@+id/readSentenceFragment"
        android:name="com.eywa.projectlectito.readSentence.ReadSentenceFragment"
        android:label="@string/read_sentence__title"
        tools:layout="@layout/read_sentence_fragment"
        >
        <argument
            android:name="textId"
            app:argType="integer"
            />
        <argument
            android:name="currentSnippetId"
            app:argType="integer"
            android:defaultValue="-1"
            />
        <argument
            android:name="currentCharacter"
            app:argType="integer"
            android:defaultValue="-1"
            />
    </fragment>

    <fragment
        android:id="@+id/viewTextsFragment"
        android:name="com.eywa.projectlectito.viewTexts.ViewTextsFragment"
        android:label="ViewTextsFragment"
        tools:layout="@layout/view_texts_fragment"
        />
</navigation>