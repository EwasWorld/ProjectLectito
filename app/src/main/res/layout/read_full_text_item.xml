<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    >

    <TextView
        android:id="@+id/text_rfti__snippet_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/snippet_info_banner_background"
        android:paddingHorizontal="20dp"
        android:paddingVertical="5dp"
        android:textColor="@color/info_banner_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="第２章３０ページ"
        />

    <TextView
        android:id="@+id/text_rfti__content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="5dp"
        android:textColor="@color/general_text"
        android:textSize="@dimen/small_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_rfti__snippet_info"
        tools:maxLines="15"
        tools:text="@tools:sample/lorem/random"
        />
</androidx.constraintlayout.widget.ConstraintLayout>