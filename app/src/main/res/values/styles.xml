<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FloatingActionButton" parent="android:Widget.Material.Button">
        <item name="android:backgroundTint">@color/teal_200</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@drawable/fab_background</item>
        <item name="android:tint">@color/black</item>
    </style>

    <style name="FloatingActionButton.Mini" parent="FloatingActionButton">
        <item name="android:backgroundTint">@color/teal_light</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:tint">@color/teal_700_low_alpha</item>
        <item name="android:padding">200dp</item>
    </style>

    <style name="FloatingActionButtonText">
        <item name="android:layout_marginStart">14dp</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:elevation">5dp</item>
    </style>
</resources>